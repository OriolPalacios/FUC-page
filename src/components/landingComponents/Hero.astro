---
import { Image } from "astro:assets";
import fucFondo from "@assets/fucFondo.png";
import escudoUnsaac from "@assets/escudoUnsaac.png";
---

<div class="relative min-h-96 lg:h-screen lg:w-full left-0 top-0 lg:pt-14">
  <div class="absolute inset-0 bg-gradient-to-b">
    <Image
      src={fucFondo}
      alt="FUC Header"
      class="object-cover w-full h-full blur-[2px] brightness-75 lg:brightness-60"
      loading="eager"
    />
  </div>
  <div
    class="absolute min-h-96 lg:relative inset-0 w-full h-fit flex flex-col items-center justify-evenly lg:justify-center text-white lg:min-h-[600px]"
  >
    <Image
      src={escudoUnsaac}
      alt="UNSAAC Shield"
      class="w-20 z-0 lg:hidden"
      loading="eager"
    />
    <h1
      class="z-0 w-full px-2 text-2xl lg:text-4xl font-bold text-center from-transparent via-gray-950 via-30% via-gray-500 via-70% to-red font-serif"
    >
      Gloriosa Federaci√≥n Universitaria del Cusco
    </h1>
    <div
      id="hero-explore-button"
      class="cursor-pointer lg:absolute lg:bottom-7 px-8 py-3 text-white rounded-full z-0 pointer "
    >
      Explorar
    </div>
  </div>
</div>
<style>
  @layer {
    @property --myColor-1 {
      syntax: '<color>';
      initial-value: theme(colors.red.700);
      inherits: false;
    }
    @property --myColor-2 {
      syntax: '<color>';
      initial-value: theme(colors.gray.950);
      inherits: false;
    }
    #hero-explore-button {
      background: linear-gradient(to left, var(--myColor-1), var(--myColor-2));
      transition:
        --myColor-1 1s ease-in-out,
        --myColor-2 1s ease-in-out,
        transform 500ms ease-in-out;
    }
    #hero-explore-button:hover {
      --myColor-1: theme(colors.gray.950);
      --myColor-2: theme(colors.red.700);
      transform: scale(110%);
    }
  }
</style>
<script>
  document
    .getElementById("hero-explore-button")
    ?.addEventListener("click", () => {
      const targetSection = document.getElementById("about-section");
      if (targetSection) {
        const offset = window.innerWidth >= 1024 ? -150 : 0; // Adjust offset for lg devices
        const targetPosition =
          targetSection.getBoundingClientRect().top + window.scrollY + offset;
        window.scrollTo({ top: targetPosition, behavior: "smooth" });
      }
    });
</script>
