---
import { Image } from "astro:assets";
import fucFondo from "../assets/fucFondo.png";
import escudoUnsaac from "../assets/escudoUnsaac.png";

// src/components/Hero.astro
---

<div class="relative min-h-96 lg:h-screen lg:w-full left-0 top-0 lg:pt-14">
  <div class="absolute inset-0 bg-gradient-to-b">
    <Image
      src={fucFondo}
      alt="FUC Header"
      class="object-cover w-full h-full blur-[2px] brightness-75 lg:brightness-60"
    />
  </div>
  <div
  class="absolute min-h-96 lg:relative inset-0 w-full h-fit flex flex-col items-center justify-evenly lg:justify-center text-white"
  >
    <Image src={escudoUnsaac} alt="UNSAAC Shield" class="w-20 z-0 lg:hidden"/>
    <h1
      class="z-0 w-full px-2 text-2xl lg:text-4xl font-bold text-center from-transparent via-gray-950 via-30% via-gray-500 via-70% to-red"
    >
      Gloriosa Federaci√≥n Universitaria del Cusco
    </h1>
    <button
      id="hero-explore-button"
      class="lg:absolute lg:bottom-0 px-8 py-3 text-white transition bg-gradient-to-r from-red-700 to-gray-950 rounded-full z-0 pointer hover:bg-red-800"
    >
      Explorar
  </button>
  </div>
</div>
<script>
  document.getElementById('hero-explore-button')?.addEventListener('click', () => {
    const targetSection = document.getElementById('about-section');
    if (targetSection)
      targetSection.scrollIntoView({behavior: 'smooth'});
  });
</script>