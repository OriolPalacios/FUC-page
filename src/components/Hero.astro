---
import { Image } from "astro:assets";
import fucFondo from "../assets/fucFondo.png";

// src/components/Hero.astro
---

<div class="relative h-screen w-screen left-0 top-0">
  <div
    class="absolute inset-0 bg-gradient-to-b"
  >
    <Image
      src={fucFondo}
      alt="FUC Header"
      class="object-cover w-full h-full blur-[2px] brightness-75 lg:brightness-60" 
    />
  </div>
  <div
    class="relative inset-0 h-screen flex flex-col items-center justify-center text-white"
  >
    <h1 class="w-full px-2 text-2xl lg:text-4xl font-bold text-center from-transparent via-gray-950 via-30% via-gray-500 via-70% to-red ">
      Gloriosa Federaci√≥n Universitaria del Cusco
    </h1>
    <button
      class="absolute bottom-24 px-8 py-3 text-white transition bg-gradient-to-r from-red-700 to-gray-950 rounded-full z-0 pointer hover:bg-red-800"
    >
      Explorar
    </button>
  </div>
</div>
