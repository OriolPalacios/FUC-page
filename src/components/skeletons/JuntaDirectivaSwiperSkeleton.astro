<div class="w-1/2 md:w-[300px] md:h-[350px] lg:w-[350px] lg:h-[400px] h-[200px] lg:mt-12 mx-auto">
  <div class="relative w-full h-full">
    <!-- Main card (visible) -->
    <div class="w-full bg-red-800/50 h-[230px] md:h-[350px] lg:h-full mx-auto flex flex-col justify-evenly items-center rounded-xl animate-pulse">
      <div class="w-full flex flex-col items-center gap-2">
        <!-- Position skeleton -->
        <div class="h-6 md:h-7 lg:h-8 w-3/5 bg-white/30 rounded"></div>
        <!-- Name skeleton -->
        <div class="h-6 md:h-8 lg:h-9 w-4/5 bg-white/30 rounded"></div>
      </div>
      
      <!-- Image skeleton -->
      <div class="w-1/2 md:w-[200px] h-24 md:h-[180px] bg-white/20 md:rounded-xl"></div>
    </div>
    
    <!-- Shadow cards to mimic the card effect -->
    <div class="absolute top-1 left-1 -z-10 w-[98%] bg-red-800/30 h-[230px] md:h-[350px] lg:h-full rounded-xl"></div>
    <div class="absolute top-2 left-2 -z-20 w-[96%] bg-red-800/20 h-[230px] md:h-[350px] lg:h-full rounded-xl"></div>
  </div>
</div>