---
const numberOfSkeletons = 4;
---

<div class="flex flex-wrap justify-center gap-5 mb-4">
  {
    Array.from({ length: numberOfSkeletons }).map(() => (
      <div class="w-[380px] h-[480px] md:w-[300px] md:h-[500px] lg:max-w-[300px] flex flex-col mx-auto lg:mx-0 shadow-lg rounded-lg overflow-hidden animate-pulse">
        {/* Image placeholder */}
        <div class="relative h-1/2">
          <div class="h-full max-w-[300px] bg-gray-300 mx-auto" />
          <div class="absolute inset-0" />
        </div>

        {/* Content section */}
        <div class="relative h-1/2 bg-white p-4 flex flex-col justify-between">
          {/* Title placeholder */}
          <div class="h-7 bg-gray-300 rounded w-3/4" />

          {/* Date placeholder */}
          <div class="w-fit h-5 bg-amber-200/50 rounded p-1" />

          {/* Location placeholder */}
          <div class="w-fit h-5 bg-slate-200 rounded px-1" />

          {/* Mode badge placeholder */}
          <div class="w-fit h-6 bg-amber-300/50 rounded p-1 mb-2" />

          {/* Actions placeholder */}
          <div class="flex space-x-2 justify-between">
            <div class="h-8 w-16 bg-red-800/50 rounded" />
            {/* Social links */}
            <div class="flex gap-2">
              <div class="h-8 w-8 bg-blue-400/50 rounded" />
              <div class="h-8 w-8 bg-gray-800/50 rounded" />
              <div class="h-8 w-8 bg-green-400/50 rounded" />
            </div>
          </div>
        </div>
      </div>
    ))
  }
</div>
