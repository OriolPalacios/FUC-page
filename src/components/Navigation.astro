---
import { Image } from "astro:assets";
import escudoUnsaac from "../assets/escudoUnsaac.png";
import Hamburguer from "./Hamburguer.astro";
---

<nav class="top-0 z-50 w-full h-screen absolute">
  <div
    class="nav-links absolute top-0 -translate-x-full lg:translate-x-0 transition-transform right-0 py-4 w-full h-screen text-white bg-gradient-to-r from-gray-900 lg:fixed lg:from-gray-900 lg:bg-gradient-to-b lg:h-fit"
  >
    <div
      class="flex w-full flex-col px-5 py-5 items-center justify-evenly lg:px-0 lg:flex-row lg:justify-between"
    >
      <Image
        src={escudoUnsaac}
        alt="Logo de la universidad"
        class="fuc-back-image self-start w-9 absolute top-7 right-7 lg:order-2 lg:top-0 lg:right-0 lg:relative lg:top-auto lg:left-auto lg:w-14"
      />
      <div
        class="flex flex-col brightness-75 items-start w-full gap-6 mb-3.5 lg:order-1 lg:flex-row lg:justify-evenly lg:mb-0 lg:w-2/5"
      >
        <a href="#" class="transition hover:text-red-500">NOTICIAS</a>
        <a href="#" class="transition hover:text-red-500">CONSULTAS</a>
        <a href="#" class="transition hover:text-red-500">DOCUMENTOS</a>
      </div>
      <div
        class="flex flex-col items-start w-full gap-6 lg:order-3 lg:flex-row lg:justify-evenly lg:w-2/5"
      >
        <a href="#" class="transition hover:text-red-500">EVENTOS</a>
        <a href="#" class="transition hover:text-red-500">MIEMBROS</a>
        <a href="#" class="transition hover:text-red-500">GALER√çA</a>
      </div>
    </div>
  </div>
  <Hamburguer />
</nav>
<script>
  const toggleNav = () => {
    const topPath = document.querySelector('.path-top');
    const middlePath = document.querySelector('.path-middle');
    const bottomPath = document.querySelector('.path-bottom');
    document.querySelector(".nav-links")?.classList.toggle("-translate-x-full");
    topPath?.classList.toggle('rotate-45')
    topPath?.classList.toggle('-translate-y-0.5')
    middlePath?.classList.toggle('-rotate-45')
    middlePath?.classList.toggle('translate-y-1.5')
    middlePath?.classList.toggle('translate-x-0.5')
    bottomPath?.classList.toggle('scale-0')

  };
  const menu = document.querySelector(".hamburguer");
  menu?.addEventListener("click", () => toggleNav());
</script>
