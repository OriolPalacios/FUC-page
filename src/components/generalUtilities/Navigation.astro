---
import { Image } from "astro:assets";
import escudoUnsaac from "@assets/escudoUnsaac.png";
import Hamburguer from "@components/generalUtilities/Hamburguer.astro";
import Home from "@components/generalUtilities/Home.astro";

interface Props {
  isHeroPage: boolean;
}

const { isHeroPage = false } = Astro.props;
---

<nav class="top-0 w-full absolute font-serif">
  <div
    class={`nav-links z-20 fixed top-0 -translate-x-full lg:translate-x-0 transition-transform duration-300 right-0 py-4 lg:py-0 w-full h-screen text-white ${isHeroPage ? "bg-gradient-to-r from-gray-900 lg:fixed lg:from-gray-900 lg:bg-gradient-to-b" : "lg:bg-red-800 bg-gradient-to-r from-gray-900 lg:fixed lg:from-red-800 lg:bg-gradient-to-b"}  lg:h-fit`}
  >
    <div
      class="flex w-full flex-col px-5 py-5 lg:py-2 items-center justify-evenly lg:px-0 lg:flex-row lg:justify-between lg:backdrop-blur-sm lg:h-fit"
    >
      <a
        href="/home"
        class={`hidden lg:block fuc-back-image self-start w-9 absolute top-7 right-7 lg:order-2 lg:top-0 lg:right-0 lg:relative lg:top-auto lg:left-auto lg:w-20 ${isHeroPage ? `pointer-events-none` : ""}`}
      >
        <Image
          src={escudoUnsaac}
          alt="Logo de la universidad"
          loading="eager"
        />
      </a>
      <div
        class="flex flex-col items-start w-full gap-6 mb-3.5 lg:order-1 lg:flex-row lg:justify-evenly lg:mb-0 lg:w-2/5 text-white"
      >
        <div class="relative">
          <a
            href="/news/page?page=1"
            class="after:w-full after:h-px after:bg-gray-100 after:absolute after:bottom-0 after:left-0 after:origin-center after:scale-0 after:hover:scale-100 after:transition-transform"
            >NOTICIAS</a
          >
        </div>
        <div class="relative">
          <a
            href="/documents/page?page=1"
            class="after:w-full after:h-px after:bg-gray-100 after:absolute after:bottom-0 after:left-0 after:origin-center after:scale-0 after:hover:scale-100 after:transition-transform"
            >DOCUMENTOS</a
          >
        </div>
        <div class="relative">
          <a
            href="/events/page?page=1"
            class="after:w-full after:h-px after:bg-gray-100 after:absolute after:bottom-0 after:left-0 after:origin-center after:scale-0 after:hover:scale-100 after:transition-transform"
            >EVENTOS</a
          >
        </div>
      </div>
      <div
        class="flex flex-col items-start w-full gap-6 lg:order-3 lg:flex-row lg:justify-evenly lg:w-2/5"
      >
        <div class="relative">
          <a
            data-astro-reload
            href="/members"
            class="after:w-full after:h-px after:bg-gray-100 after:absolute after:bottom-0 after:left-0 after:origin-center after:scale-0 after:hover:scale-100 after:transition-transform"
            >MIEMBROS</a
          >
        </div>
        <div class="relative">
          <a
            href="/consults"
            class="after:w-full after:h-px after:bg-gray-100 after:absolute after:bottom-0 after:left-0 after:origin-center after:scale-0 after:hover:scale-100 after:transition-transform"
            >CONSULTAS y DENUNCIAS</a
          >
        </div>
      </div>
    </div>
  </div>
  {!isHeroPage && <Home />}
  <Hamburguer />
</nav>
<script>
  document.addEventListener("astro:page-load", () => {
    const toggleNav = () => {
      document
        .querySelector(".nav-links")
        ?.classList.toggle("-translate-x-full");
    };
    const menu = document.querySelector(".hamburguer");
    menu?.addEventListener("click", () => toggleNav());
  });
</script>
