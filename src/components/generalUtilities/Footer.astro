---
// src/components/Footer.astro
import facebookIcon from "@assets/facebookIcon.svg";
import instagramIcon from "@assets/instagramIcon.svg";
import tiktokIcon from "@assets/tiktokIcon.svg";
import linkedinIcon from "@assets/linkedinIcon.svg";
import unsaacBorder from "@assets/unsaacBorder.png";
import { Image } from "astro:assets";

const socialLinks: { name: string; link: string; icon: ImageMetadata }[] = [
  {
    name: "Facebook",
    link: "https://www.facebook.com/GLORIOSAFUC/?locale=es_LA",
    icon: facebookIcon,
  },
  {
    name: "Instagram",
    link: "https://www.instagram.com/federacionuniversitariacusco/",
    icon: instagramIcon,
  },
  {
    name: "TikTok",
    link: "https://www.tiktok.com/@fuc.unsaac",
    icon: tiktokIcon,
  },
  {
    name: "LinkedIn",
    link: "https://www.linkedin.com/in/federaci%C3%B3n-universitaria-del-cusco-061621314/",
    icon: linkedinIcon,
  },
];

---

<footer class="pt-12 pb-6 text-white bg-black mt-auto w-full overflow-hidden">
  <div class="container px-6 mx-auto">
    <div
      class="grid gap-8 grid-cols-2 md:grid-cols-3 lg:grid-cols-4 items-center"
    >
      <div class="self-start">
        <h3 class="mb-4 text-xl font-bold">Contacto</h3>
        <ul class="space-y-2">
          <li>Dirección: Av. Universitaria, cuidad de Perayoq - Puerta N° 6</li>
          <li>Teléfono: <a href="tel:984166331">984 166 331</a></li>
          <li>Email: fuc@unsaac.edu.pe</li>
        </ul>
      </div>
      <div class="self-start">
        <h3 class="mb-4 text-xl font-bold">Redes Sociales</h3>
        <div class="flex flex-col gap-4">
          {
            socialLinks.map((value, index) => (
              <a href={value.link}>
                <Image
                  src={value.icon}
                  alt={`${value.name} icon`}
                  width={24}
                  height={24}
                  class="h-6 w-6 inline-block mr-2 text-white"
                />
                <span>{value.name}</span>
              </a>
            ))
          }
        </div>
      </div>
      <div class="iframe-rwd">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3313.823234280544!2d-71.96081673720576!3d-13.52165812657505!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x916dd5fdf70d465d%3A0xcbddd8e36a2171d!2sUniversidad%20Nacional%20de%20San%20Antonio%20Abad%20del%20Cusco!5e0!3m2!1ses!2spe!4v1737561946476!5m2!1ses!2spe"
          width="600"
          height="450"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div class="justify-self-center">
        <Image src={unsaacBorder} alt="FUC Logo" class="h-28" width={81} />
      </div>
      <p class="col-span-2 self-center lg:col-span-4 text-center">
        <a
          class="group w-fit mx-auto text-amber-500/80 relative block"
          target="_blank"
          href="https://www.linkedin.com/in/oriol-fernando-palacios-durand-7b2764331/"
        >
          By Oriol Palacios
            <span class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 bg-amber-500 origin-center"></span>
        </a>
      </p>
    </div>
  </div>
</footer>

<style>
  .iframe-rwd {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
  }
  .iframe-rwd iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
