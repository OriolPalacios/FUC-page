<div
  class="z-50 fixed bottom-2 right-2 flex flex-col items-center justify-center bg-gray-900 rounded-full w-12 h-12 pointer lg:hidden"
>
  <input
    type="checkbox"
    id="toggle-nav"
    class="hidden absolute block wrapper w-3/4 h-full flex justify-center items-center relative bg-transparent peer"
  />
  <label
    for="toggle-nav"
    class="hamburguer relative flex justify-center items-center block w-3/4 h-full cursor-pointer"
  >
    <div
      class="line
        w-3/4
        before:w-full
        after:w-full
        relative
        before:absolute
        after:absolute
        bg-gray-100
        before:bg-gray-100
        after:bg-gray-100"
    >
    </div>
  </label>
</div>

<style>
  .line {
    transition: background 10ms 300ms ease;
    height: 3px;
  }
  .line::before {
    transition:
      top 300ms 350ms ease,
      transform 300ms 50ms ease;
    top: -0.5rem;
    height: 3px;
  }
  .line::after {
    transition:
      top 300ms 350ms ease,
      transform 300ms 50ms ease;
    top: 0.5rem;
    height: 3px;
  }
  #toggle-nav:checked + label line,
  #toggle-nav:checked + label .line::after,
  #toggle-nav:checked + label .line::before {
    transition:
      top 300ms 50ms ease,
      transform 300ms 350ms ease;
    top: 0;
  }
  #toggle-nav:checked + label .line {
    background-color: transparent;
  }
  #toggle-nav:checked + label .line::after{
    transform: rotate(45deg);
  }
  #toggle-nav:checked + label .line::before{
    transform: rotate(-45deg);
  }
</style>
