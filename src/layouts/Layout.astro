---
import Footer from "../components/Footer.astro";
import Navigation from "../components/Navigation.astro";

// src/layouts/Layout.astro
interface Props {
  title: string;
  isHeroPage?: boolean;
}

const { title, isHeroPage = false  } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="relative">
    <Navigation isHeroPage={isHeroPage}/>
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
  .swiper-button-next:after {
    color: #000;
  }
  .swiper-button-prev:after {
    color: #000;
  }
  body {
    width: 100%;
    height: 100%;
  }
  .tl-slide .tl-slide-background {
    filter: blur(3px);
  }
</style>
